{
  "extends": ["./tsconfig.base.json", "@vue/tsconfig/tsconfig.json"],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true
  },
  "include": ["packages", "typings/env.d.ts"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
